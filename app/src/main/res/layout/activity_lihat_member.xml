<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LihatMember">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_column="1"
                android:padding="2dp"
                android:text="Kode Member"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/t1"
                android:gravity="left"
                android:padding="4dp"
                android:text="-"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtLihatKodeMember"
                android:gravity="left"
                android:padding="4dp"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_column="1"
                android:padding="2dp"
                android:text="Nama"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/t2"
                android:gravity="left"
                android:padding="4dp"
                android:text="-"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtLihatNama"
                android:gravity="left"
                android:padding="4dp"
                android:text="Andhika Panji Prasetyo"
                android:textColor="@android:color/black"
                android:textStyle="bold" />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="Tanggal Lahir"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/t4"
                android:gravity="right"
                android:padding="3dip"
                android:text="-"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtLihatTanggalLahir"
                android:gravity="left"
                android:padding="4dp"
                android:text="15/11/1995"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

        </TableRow>
        <View android:layout_height="5dp" />

        <TableRow>
            <TextView
                android:layout_column="1"
                android:padding="3dp"
                android:text="Alamat"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/t3"
                android:gravity="left"
                android:padding="3dip"
                android:text="-"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtLihatAlamat"
                android:gravity="left"
                android:padding="4dp"
                android:text="Jl. Sakura No.340"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="Jenis Kelamin"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/t7"
                android:gravity="right"
                android:padding="3dip"
                android:text="-"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtLihatJenisKelamin"
                android:gravity="left"
                android:padding="4dp"
                android:text="Laki-laki"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="Username"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/t6"
                android:gravity="right"
                android:padding="3dip"
                android:text="-"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtLihatUsername"
                android:gravity="left"
                android:padding="4dp"
                android:text="panji"
                android:textColor="@android:color/black"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="286dp">

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="Password"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/t5"
                android:gravity="right"
                android:padding="3dip"
                android:text="-"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtLihatPassword"
                android:gravity="left"
                android:padding="4dp"
                android:text="123456"
                android:textColor="@android:color/black"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>